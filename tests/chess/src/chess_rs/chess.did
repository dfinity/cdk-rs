type Piece = variant {
    None: null;
    BlackPawn: null;
    BlackRook: null;
    BlackKnight: null;
    BlackBishop: null;
    BlackQueen: null;
    BlackKing: null;
    WhitePawn: null;
    WhiteRook: null;
    WhiteKnight: null;
    WhiteBishop: null;
    WhiteQueen: null;
    WhiteKing: null;
};

type Player = variant {
    Black: null;
    White: null;
};

type Game = record {
    "name": text;
    "fen": text;
};

service : {
    "new": (text) -> ();
    "newFromFen": (text, text) -> ();
    "getState": (text) -> (opt Game) query;
    "getBoard": (text) -> (opt vec vec Piece) query;

    "uci": (text, text) -> (bool);
}
